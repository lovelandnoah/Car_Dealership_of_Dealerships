%br
%h2.center.container Edit This #{@car.make}
%br
%br
.container
	= form_for @car do |f|
		= f.label :make
		= f.text_field :make
		
		= f.label :model
		= f.text_field :model
		
		= f.label :year
		= f.number_field :year
		
		= f.label :color
		= f.text_field :color 
		%br
		%br
		.center
			.btn.green.white-text.waves-effect.waves-light= f.submit "Update this #{@car.make}"